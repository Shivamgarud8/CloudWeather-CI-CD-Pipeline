pipeline {
    agent any

    environment {
        SSH_CRED    = 'node-cred'  // Jenkins SSH credential ID
        SERVER_IP   = '13.53.48.173'
        REMOTE_USER = 'ubuntu'
        APP_DIR     = '/home/ubuntu/tele'  // Project directory
        REPO_URL    = 'https://github.com/Shivamgarud8/weather-jenkins-python-pipeline.git'
    }

    stages {

        stage('Clone Repository') {
            steps {
                echo 'üì¶ Cloning repository...'
                git url: "${REPO_URL}", branch: 'main'
            }
        }

        stage('Setup Server & Transfer Files') {
            steps {
                echo 'üöÄ Setting up remote server and transferring files...'
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "sudo mkdir -p ${APP_DIR} && sudo chown -R ${REMOTE_USER}:${REMOTE_USER} ${APP_DIR}"
                        scp -o StrictHostKeyChecking=no -r app.py requirements.txt ${REMOTE_USER}@${SERVER_IP}:${APP_DIR}/
                    '''
                }
            }
        }

        stage('Install Python & Dependencies') {
            steps {
                echo '‚öôÔ∏è Installing Python, venv, and dependencies on server...'
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "
                            sudo apt update -y &&
                            sudo apt install -y python3 python3-pip python3-venv &&
                            cd ${APP_DIR} &&
                            python3 -m venv venv &&
                            source venv/bin/activate &&
                            pip install --upgrade pip &&
                            pip install -r requirements.txt
                        "
                    '''
                }
            }
        }

        stage('Setup Cron Job for Daily Run') {
            steps {
                echo '‚è∞ Scheduling daily 8 AM cron job for Telegram bot...'
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "
                            crontab -l 2>/dev/null | grep -v 'app.py' > temp_cron || true
                            echo '0 8 * * * cd ${APP_DIR} && source ${APP_DIR}/venv/bin/activate && python ${APP_DIR}/app.py >> ${APP_DIR}/cron.log 2>&1' >> temp_cron
                            crontab temp_cron
                            rm temp_cron
                            echo '‚úÖ Cron job for 8 AM daily set up successfully!'
                        "
                    '''
                }
            }
        }

        stage('Run Telegram Bot Now') {
            steps {
                echo 'ü§ñ Running Telegram Weather Bot immediately...'
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "
                            cd ${APP_DIR} &&
                            nohup venv/bin/python3 app.py > bot.log 2>&1 &
                            echo '‚úÖ Telegram bot is running!'
                        "
                    '''
                }
            }
        }

        stage('Verify Bot Deployment') {
            steps {
                echo 'üîç Checking if Telegram bot is running...'
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "
                            ps aux | grep app.py | grep -v grep || echo '‚ùå Telegram bot not running!'
                        "
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'üéâ Telegram Weather Bot deployed and scheduled successfully!'
        }
        failure {
            echo '‚ùå Deployment failed. Check Jenkins logs and bot.log on the server.'
        }
    }
}
